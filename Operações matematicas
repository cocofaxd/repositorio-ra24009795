#include <stdio.h>

int main() {
    float num1, num2, soma, subtração, divisão, multiplicação;

    
    printf("Digite o primeiro número: ");
    scanf("%f", &num1); 

    printf("Digite o segundo número: ");
    scanf("%f", &num2); 

    // Calculate the sum
    soma = num1 + num2; 

    // Display the result
    printf("A soma dos números é %.2f\n", soma); 
    
    subtração = num1 - num2;
    
     printf("A subtração dos números é %.2f\n", subtração);
     
     divisão = num1 / num2;
     printf("A divisão dos números é %.2f\n", divisão);
     
        multiplicação = num1 * num2;
     printf("A multiplicação dos números é %.2f\n", multiplicação);
    

    return 0;
}
